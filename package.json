{
   "name": "stack-lang",
   "displayName": "Stack lang",
   "description": "language server for STACK software package",
   "version": "0.3.7",
   "repository": "https://github.com/stonum/stack-lang",
   "publisher": "stonum",
   "categories": [
      "Programming Languages",
      "Formatters",
      "Linters"
   ],
   "icon": "images/mark-logo-stack.png",
   "license": "MIT",
   "keywords": [
      "language-server",
      "stack"
   ],
   "engines": {
      "vscode": "^1.69.0"
   },
   "activationEvents": [
      "onLanguage:stack"
   ],
   "main": "./client/out/extension",
   "contributes": {
      "languages": [
         {
            "id": "stack",
            "aliases": [
               "stack"
            ],
            "extensions": [
               ".prg",
               ".hdl",
               ".rpt"
            ],
            "firstLine": "^#![Ss][Tt][Aa][Cc][Kk]\\b",
            "configuration": "./syntaxes/configuration.json"
         }
      ],
      "grammars": [
         {
            "language": "stack",
            "scopeName": "source.stack",
            "path": "./syntaxes/stack.json"
         }
      ],
      "commands": [
         {
            "command": "stack.togglePostgreSQL",
            "title": "Replaces tildas in the query to schema and backward",
            "category": "stack"
         },
         {
            "command": "stack.fieldsToPostgreSQL",
            "title": "Replaces [] на \"",
            "category": "stack"
         }
      ],
      "keybindings": [
         {
            "command": "stack.togglePostgreSQL",
            "key": "ctrl+shift+r",
            "mac": "cmd+shift+r",
            "when": "editorTextFocus"
         }
      ],
      "configuration": {
         "type": "object",
         "title": "Stack lang",
         "properties": {
            "stack.iniPath": {
               "title": "Path to INI file",
               "markdownDescription": "Path to stack.ini file. It used for filter loaded folders.",
               "default": "",
               "type:": "string"
            },
            "stack.lens.enabled": {
               "title": "lens",
               "markdownDescription": "Whether to show CodeLens in Stack files.",
               "default": true,
               "type": "boolean"
            }
         }
      },
      "snippets": [
         {
            "language": "stack",
            "path": "./snippets/snippets.json"
         }
      ]
   },
   "scripts": {
      "postinstall": "cd client && npm i",
      "server:compile": "server-compile.sh",
      "client:compile": "tsc -b",
      "watch": "rm -rf client/out && tsc -b -w",
      "package": "vsce package",
      "publish": "vsce publish"
   },
   "dependencies": {
      "vscode-languageclient": "9.0.1"
   },
   "devDependencies": {
      "@types/node": "^24.10.0",
      "@typescript-eslint/eslint-plugin": "^8.46.0",
      "@typescript-eslint/parser": "^8.46.0",
      "@electron/rebuild": "4.0.1",
      "eslint": "^9.39.1",
      "glob": "^11.0.3",
      "ts-loader": "^9.5.4",
      "typescript": "^5.9.3",
      "vscode-uri": "^3.0.2",
      "webpack": "^5.102.1",
      "webpack-cli": "^6.0.1"
   }
}
